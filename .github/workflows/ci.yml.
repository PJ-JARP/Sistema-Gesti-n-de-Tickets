name: Java CI with JUnit

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Set up JDK 22.0.2
        uses: actions/setup-java@v3
        with:
          java-version: '22.0.2'
      - name: Build and run tests
        run: |
          ./gradlew build test
